<%= render 'shared/content_title', title: 'All Posts' %>

<% @posts.each do |post| %>
  <div class="row">
    <div class='span8 well'>

      <%= render post.categories %>
      
      <h4><%= link_to post.title, post_path(post) %></li></h4> <!--or post.url-->
      <p><%= post.description %></p>
      <p>
        <span class='quiet'>posted by </span>
        <% if post.creator == nil %>

        <% else %>
          <%= post.creator.username %>
        <% end %>
        at <%= post.created_at %>
      </p>
      <span>
        <%= link_to "#{post.comments.size} comments", post_path(post) %>
      </span>
    </div>
  </div>
<% end %>
